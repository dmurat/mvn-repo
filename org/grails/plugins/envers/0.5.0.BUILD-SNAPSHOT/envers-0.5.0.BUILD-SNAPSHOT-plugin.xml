  <documentation>http://grails.org/plugin/envers</documentation>
  <type>EnversGrailsPlugin</type>
  <resources>
    <resource>spring.resources</resource>
    <resource>net.lucasward.grails.plugin.Address</resource>
    <resource>net.lucasward.grails.plugin.Customer</resource>
    <resource>net.lucasward.grails.plugin.OrderEntry</resource>
