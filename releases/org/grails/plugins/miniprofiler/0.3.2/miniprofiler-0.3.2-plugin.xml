<plugin name='miniprofiler' version='0.3.2' grailsVersion='1.3 &gt; *'>
  <author>Tom Dunstan</author>
  <authorEmail>grails@tomd.cc</authorEmail>
  <title>Mini Profiler plugin</title>
  <description>Shows timing and sql query information in a head-up display in a web page, useful for debugging
database and other performance problems.

Note: this is forked version of main development stream. For more details take a look at the end of grails-miniprofiler/README.md or at
https://github.com/dmurat/grails-miniprofiler/tree/myModifications
</description>
  <documentation>http://grails.org/plugin/miniprofiler</documentation>
  <type>MiniprofilerGrailsPlugin</type>
  <resources>
    <resource>grails.plugin.miniprofiler.MiniProfilerTagLib</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
    <repository name='https://github.com/dmurat/mvn-repo/raw/master/snapshots/' url='https://github.com/dmurat/mvn-repo/raw/master/snapshots/' />
    <repository name='https://github.com/dmurat/mvn-repo/raw/master/releases/' url='https://github.com/dmurat/mvn-repo/raw/master/releases/' />
  </repositories>
  <dependencies>
    <compile>
      <dependency group='io.jdev.miniprofiler' name='miniprofiler-core' version='0.3.2' />
    </compile>
  </dependencies>
  <plugins />
  <runtimePluginRequirements />
  <behavior />
</plugin>